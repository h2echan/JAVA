package find_false_image_game;

import java.awt.Color;
import java.awt.event.*;
import javax.swing.*;



public class day1 extends JFrame {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		JFrame f = new JFrame();
		f.setSize(300,200);
		f.setLayout(null);
		
		class key implements KeyListener{

		
			public void keyPressed(KeyEvent e) {
				if( e.getKeyCode() == 37 ) System.out.println( "왼족 누름");
                if( e.getKeyCode() == 38 ) System.out.println( "위 누름");
                if( e.getKeyCode() == 39 ) System.out.println( "오른쪽 누름");
                if( e.getKeyCode() == 40 ) System.out.println( "아래 누름");           
				
			}

		
			public void keyReleased(KeyEvent e) {
				// TODO Auto-generated method stub
				
			}

		
			public void keyTyped(KeyEvent e) {
				// TODO Auto-generated method stub
				
			}
			
		}
		f.setVisible(true);
		f.addKeyListener(new key());
	}

}
