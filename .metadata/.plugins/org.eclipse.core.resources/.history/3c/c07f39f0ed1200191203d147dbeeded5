import javax.swing.*;
import find_false_image_game.rectangle;
import java.awt.*;







class drawRect{
	public void paint(Graphics g,rectangle rect) {
		g.setColor(Color.red);
		g.drawRect(rect.x, rect.y, rect.width, rect.height);
	}
}
